<h1>Sign up</h1>

<form action="/users" method="POST">
  <label for="user_email">Email</label>
  <input
      type="hidden"
      name="authenticity_token"
      value="<%= form_authenticity_token %>">

  <input type="text"
         name="user[email]"
         id="user_email">
  <br>
  <label for="user_password">Password</label>
  <input type="password"
         name="user[password]"
         id="user_password">
  <br>
  <br>
  <input type="submit" value="Sign up!">
  <br>
</form>
